<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="タイトル"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/titleEdit"
            android:maxLength="10"
            android:background="@drawable/partsdesign"
            android:hint="予定のタイトルを入力(10文字以内)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:minLines="2"
            android:maxLines="5"/>

        <TextView
            android:text="詳細"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/detailEdit"
            android:maxLength="200"
            android:gravity="top"
            android:hint="予定の詳細を入力(200文字以内)"
            android:background="@drawable/partsdesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:minLines="10"
            android:maxLines="10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelBtn"
                android:drawableLeft="@drawable/cancel_icon"
                android:text="キャンセル"
                android:textColor="@color/black"
                android:backgroundTint="#87cefa"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/registerBtn"
                android:drawableLeft="@drawable/registration_icon"
                android:text="リストに登録"
                android:textColor="@color/black"
                android:backgroundTint="#90ee90"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>